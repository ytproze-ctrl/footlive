name: Mise à jour automatique du site

on:
  schedule:
    - cron: "0 18 * * *"  # Tous les jours à 18h UTC
  workflow_dispatch:      # Permet de le lancer manuellement

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Récupérer le code
        uses: actions/checkout@v4

      - name: Mettre à jour le fichier HTML
        run: |
          echo "<!-- dernière mise à jour : $(date) -->" >> index.html

      - name: Publier sur GitHub Pages
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./
